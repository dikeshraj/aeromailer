{
  "name": "dikeshraj/aeromailer",
  "description": "AeroMailer - a custom Laravel mail driver for HTTP mail provider APIs",
  "type": "library",
  "license": "MIT",
  "require": {
    "php": ">=8.1",
    "illuminate/support": "^12.0",
    "guzzlehttp/guzzle": "^7.0",
    "symfony/mailer": "^6.0 || ^7.0"
  },
  "autoload": {
    "psr-4": {
      "DikeshRajGiri\\AeroMailer\\": "src/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "DikeshRajGiri\\AeroMailer\\AeroMailerServiceProvider"
      ]
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "guzzlehttp/psr7": "^2.0"
  }
}
